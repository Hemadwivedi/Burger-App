<header>
    <div class="row">
        <div class="col-md-12">
            <h1 align="center">Eat-The-Burger</h1>
        </div>
    </div>
</header>

<div class="center">
    <div class="row">
        <div class="col-md-4">
            <h2 align="center">Uneaten-Burgers</h2>
            <ul align="center">
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devoured=false}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div align="center" class="col-md-4">
            <br>
            <br>
            <img src="/assets/img/burger.png" alt="burger" id="imgID">
        </div>


        <div class="col-md-4">
            <h2 align="center">Eaten Burgers</h2>
            <ul align="center" class="list-group mb-5">
                {{#each burgers}}
                    {{#if devoured}}
                        <li class="list-group-item list-group-item-primary mt-2">
                            {{!-- {{burger_name}} --}}
                            {{> burgers/burger-block devoured=true}}
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
<br>
<br>
<div align="center" class="row">
    <div class="col-md-12">
        <form class="create-form">
            <div class="form-group">
                <div class="input-group mb-3">
                    <input class="form-control" type="text" id="burgerName" placeholder="Enter Burger Name">
                    <div class="input-group-append">
                        <button class="btn btn-outline-dark" type="button" id="submitId">Add Burger</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>